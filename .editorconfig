# .editorconfig
# Consistency is divine. This file defines universal formatting rules for all editors and IDEs.
# Supported by VSCode, JetBrains, Sublime, Vim, GitHub's web editor, and more.

root = true

# Default rule for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# Markdown — preserve trailing spaces (for line breaks)
[*.md]
trim_trailing_whitespace = false

# YAML — consistent 2-space indent, critical for workflows
[*.yml]
indent_style = space
indent_size = 2

# Shell scripts — standardize line endings
[*.sh]
end_of_line = lf
charset = utf-8

# JSON & config files — strict indentation
[*.{json,cfg,toml}]
indent_style = space
indent_size = 2

# HTML/CSS/JS/TS — keep defaults clean
[*.{html,css,js,ts}]
indent_style = space
indent_size = 2

# Python — enforce 4-space indent (PEP 8)
[*.py]
indent_style = space
indent_size = 4
